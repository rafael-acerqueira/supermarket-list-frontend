{
    "plugins": [
        "react"
    ],
    "parserOptions": {  
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {  
          "jsx": true,
          "modules": true
        }
      },    
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
      "no-set-state": "off",
      "no-trailing-spaces": 2,
      "keyword-spacing": 2,
      "space-before-function-paren": [2, "never"],
      "comma-dangle": [2, "never"],
      "quotes": [2, "single"],
      "semi": [2, "never"],
      "guard-for-in": 2,
      "no-eval": 2,
      "no-with": 2,
      "valid-typeof": 2,
      "no-unused-vars": 2,
      "no-continue": 1,
      "no-extra-semi": 1,
      "no-unreachable": 1,
      "no-unused-expressions": 1,
      "no-magic-numbers": 1
    }
}